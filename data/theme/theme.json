      "misc": {
        "border_width": 2,
        "shape": "rectangle",
        "filled_bar_height": 10,
        "unfilled_bar_height": 10,
        "slider_height": 20,
        "slider_width": 20
      }
    },
    "label": {
      "colours": {
        "normal_text": "#FFFFFF",
        "hovered_text": "#FFFFFF",
        "disabled_text": "#AAAAAA"
