      "file": "data/NotoSans-Regular.ttf"
    }
  },
  "ui_element_styles": {
    "horizontal_slider": {
      "colours": {
        "normal_bg": "#FFFFFF",
        "hovered_bg": "#DDDDDD",
        "disabled_bg": "#AAAAAA",
        "normal_border": "#000000",
        "hovered_border": "#333333",
        "disabled_border": "#666666",
        "filled_bar": "#FF0000",
        "unfilled_bar": "#00FF00"
